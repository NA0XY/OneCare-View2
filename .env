# OneCare Healthcare Platform Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Security Configuration
JWT_SECRET=onecare-healthcare-platform-super-secure-jwt-secret-key-2024
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=12

# Database Configuration (Future MongoDB/PostgreSQL integration)
DATABASE_URL=mongodb://localhost:27017/onecare
DATABASE_NAME=onecare_healthcare
DATABASE_MAX_CONNECTIONS=100

# Redis Configuration (For session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
SESSION_SECRET=onecare-session-secret-key-2024

# Email Configuration (For notifications and alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=notifications@onecare.com
SMTP_PASS=your-email-app-password
FROM_EMAIL=OneCare Platform <notifications@onecare.com>

# SMS Configuration (Twilio integration)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/onecare.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# AI/ML Services (Future integration)
OPENAI_API_KEY=your-openai-api-key
HEALTH_AI_ENDPOINT=https://api.health-ai.com/v1

# Third-party Integrations
FHIR_SERVER_URL=https://hapi.fhir.org/baseR4
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring and Analytics
ANALYTICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
METRICS_RETENTION_DAYS=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_AUDIT_LOGGING=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AI_FEATURES=false

# Development Settings
DEBUG_MODE=true
MOCK_EXTERNAL_SERVICES=true
SKIP_EMAIL_VERIFICATION=true